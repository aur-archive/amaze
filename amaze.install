post_install() {
  xdg-icon-resource install --novendor --size 16 /usr/share/icons/hicolor/16x16/apps/amaze.png
  xdg-icon-resource install --novendor --size 32 /usr/share/icons/hicolor/32x32/apps/amaze.png
  xdg-icon-resource install --novendor --size 64 /usr/share/icons/hicolor/64x64/apps/amaze.png

  update-mime-database usr/share/mime
  update-desktop-database -q
}
